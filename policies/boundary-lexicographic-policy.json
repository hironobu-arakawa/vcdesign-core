{
    "version": 1,
    "policy_id": "boundary_lexico_v1",
    "name": "Boundary Lexicographic Order",
    "description": "Lexicographic boundary order for Always-on Rapid Optimization. Higher-priority boundaries must never be violated for lower-level gains.",
    "lexicographic_order": [
        "SAFETY",
        "COMPLIANCE",
        "TRUST",
        "ETHICS",
        "BUSINESS_VIABILITY",
        "KPI_EFFICIENCY"
    ],
    "boundaries": {
        "SAFETY": {
            "type": "hard",
            "principle": "Never increase risk to human life, body, or catastrophic equipment accidents.",
            "decision": "DENY",
            "rules": [
                {
                    "id": "safety.no_margin_reduction",
                    "severity": "critical",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.effects.safety_margin_delta",
                                "op": "<",
                                "value": 0
                            },
                            {
                                "field": "proposal.effects.incident_risk_delta",
                                "op": ">",
                                "value": 0
                            }
                        ]
                    },
                    "message": "Safety margin reduced or incident risk increased."
                },
                {
                    "id": "safety.unsafe_override",
                    "severity": "critical",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.flags.safety_override",
                                "op": "==",
                                "value": true
                            }
                        ]
                    },
                    "message": "Safety override requested."
                }
            ]
        },
        "COMPLIANCE": {
            "type": "hard",
            "principle": "Never violate laws, regulations, or mandatory procedures.",
            "decision": "DENY",
            "rules": [
                {
                    "id": "compliance.violation_detected",
                    "severity": "critical",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.flags.compliance_violation",
                                "op": "==",
                                "value": true
                            }
                        ]
                    },
                    "message": "Compliance violation detected."
                },
                {
                    "id": "compliance.required_record_missing",
                    "severity": "high",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.flags.mandatory_record_missing",
                                "op": "==",
                                "value": true
                            }
                        ]
                    },
                    "message": "Mandatory compliance record would be missing."
                }
            ]
        },
        "TRUST": {
            "type": "hard",
            "principle": "Never optimize toward long-term trust erosion (auditability, data integrity, traceability).",
            "decision": "DENY",
            "rules": [
                {
                    "id": "trust.data_integrity_down",
                    "severity": "high",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.effects.data_integrity_delta",
                                "op": "<",
                                "value": 0
                            }
                        ]
                    },
                    "message": "Data integrity degraded."
                },
                {
                    "id": "trust.auditability_down",
                    "severity": "high",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.effects.auditability_delta",
                                "op": "<",
                                "value": 0
                            }
                        ]
                    },
                    "message": "Auditability degraded."
                },
                {
                    "id": "trust.traceability_down",
                    "severity": "high",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.effects.traceability_delta",
                                "op": "<",
                                "value": 0
                            }
                        ]
                    },
                    "message": "Traceability degraded."
                }
            ]
        },
        "ETHICS": {
            "type": "hard",
            "principle": "Never optimize toward unfairness, hidden surveillance, or concealment.",
            "decision": "DENY",
            "rules": [
                {
                    "id": "ethics.unfairness_up",
                    "severity": "high",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.effects.fairness_delta",
                                "op": "<",
                                "value": 0
                            }
                        ]
                    },
                    "message": "Fairness decreased."
                },
                {
                    "id": "ethics.hidden_monitoring",
                    "severity": "high",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.flags.hidden_monitoring",
                                "op": "==",
                                "value": true
                            }
                        ]
                    },
                    "message": "Hidden monitoring enabled."
                },
                {
                    "id": "ethics.conceal_defects",
                    "severity": "critical",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.flags.conceal_defects",
                                "op": "==",
                                "value": true
                            }
                        ]
                    },
                    "message": "Attempt to conceal defects/quality issues."
                }
            ]
        },
        "BUSINESS_VIABILITY": {
            "type": "soft",
            "principle": "Business viability is redesignable; allow only with explicit approval when degraded.",
            "decision": "REVIEW",
            "rules": [
                {
                    "id": "biz.viability_down",
                    "severity": "medium",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.effects.business_viability_delta",
                                "op": "<",
                                "value": 0
                            }
                        ]
                    },
                    "message": "Business viability decreased; requires review/approval."
                },
                {
                    "id": "biz.capex_increase",
                    "severity": "low",
                    "when": {
                        "any": [
                            {
                                "field": "proposal.effects.capex_delta",
                                "op": ">",
                                "value": 0
                            }
                        ]
                    },
                    "message": "CAPEX increased; requires review/approval (context dependent)."
                }
            ]
        },
        "KPI_EFFICIENCY": {
            "type": "soft",
            "principle": "KPI improvements are allowed if higher boundaries are preserved.",
            "decision": "ALLOW",
            "rules": [
                {
                    "id": "kpi.improve",
                    "severity": "info",
                    "when": {
                        "all": [
                            {
                                "field": "proposal.effects.kpi_delta",
                                "op": ">",
                                "value": 0
                            }
                        ]
                    },
                    "message": "KPI improved (soft objective)."
                },
                {
                    "id": "kpi.worsen",
                    "severity": "info",
                    "when": {
                        "all": [
                            {
                                "field": "proposal.effects.kpi_delta",
                                "op": "<",
                                "value": 0
                            }
                        ]
                    },
                    "message": "KPI worsened (soft objective)."
                }
            ]
        }
    },
    "conflict_resolution": {
        "mode": "lexicographic",
        "hard_violation_action": "DENY",
        "soft_violation_action": "REVIEW",
        "require_explanations": true
    },
    "audit": {
        "log_level": "decision",
        "record_fields": [
            "proposal.id",
            "proposal.title",
            "proposal.actor",
            "proposal.effects",
            "evaluation.decision",
            "evaluation.violations",
            "evaluation.required_approvals"
        ]
    }
}